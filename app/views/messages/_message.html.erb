<div class="cont-<%= message.user.id %>">
  <div class="message-box msg-<%= message.user.id %> " >
    <h6 class="name"> <%= message.user.username %> </h6>
    <%= message.content %>
    <div id='message_time'>
      <% if message.updated_at %>
        <%= message.created_at.to_s(:time) %>
      <% else %>  
        edited <%= message.created_at.to_s(:time) %>
      <% end %>  
    </div>
  </div>
</div>